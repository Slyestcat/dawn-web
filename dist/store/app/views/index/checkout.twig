{%  extends 'layout.twig' %}

{% block content %}
<div class="container my-5">
    <div class="row">
        <div class="col-sm-12">
            {% if redirect is defined and redirect == true %}

            <div class="text-center">
                <i class="fab fa-paypal fa-5x mt-5"></i>
                <h1 class="mb-0">Redirecting to PayPal...</h1>
                <p class="mb-5">Please wait while we redirect you to PayPal.</p>
            </div>
            
            {% else %}
            <h1 class="mb-0">Terms of Service</h1>
            <p>Before you can continue, please review the terms of service and agree at the bottom.</p>

            <hr>

            <p>
                These terms and conditions set out the terms and conditions between you, the customer, and
                {{ constant('site_title') }} (“us”, “we”), governing the use of our website and our
                content therein (the “products”). Your use of our website, 
