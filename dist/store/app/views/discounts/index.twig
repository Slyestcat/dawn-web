{%  extends 'admin_layout.twig' %}

{% block content %}
    {% include "admin/sidebar.twig" %}
    <div class="main-content" id="panel">
        {% include "admin/header.twig" %}

        <div class="container-fluid pt-6">
            <div class="row">
                <div class="col-xl-12">
                    {{ content|raw }}
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="text-uppercase text-muted ls-1 mb-1">Store</h6>
                                    <h2 class="mb-0">Discounts</h2>
                                </div>
                                <div class="col text-right">
                                    <a href="{{ url('admin/discounts/add') }}" 
                                            class="btn btn-primary shadow-none">
                                            <i class="fal fa-plus fa-fw"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th style="width:80px;">id</th>
                                <th>Code</th>
                                <th>%</th>
                                <th>Expires</th>
                                <th></th>
                            </tr>
                            </thead>

                            {% for discount in discounts %}
                                <tr>
                                    <td>{{ discount['id'] }}</td>
                                    <td>{{ discount['code'] }}</td>
                                    <td>{{ discount['percentage'] }}%</td>
                                    <td>{{ discount['expires']|date("m-d-y g:i A T") }}</td>
                                    <td class="text-right">
                                        <a href="{{ url('admin/discounts/delete/'~discount['id']) }}" 
                                            class="btn btn-primary btn-sm">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}