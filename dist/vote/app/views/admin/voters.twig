{%  extends 'admin_layout.twig' %}

{% block content %}
    {% include "admin/templates/sidebar.twig" %}
    <div class="main-content" id="panel">
        {% include "admin/templates/header_nav.twig" %}

        <div class="container-fluid pt-6">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="text-uppercase text-muted ls-1 mb-1">Dashboard</h6>
                                    <h2 class="mb-0">Voters</h2>
                                </div>
                                <div class="col">
                                    <form method="get" action="{{ url('admin/voters/1') }}" 
                                        class="form-inline float-right">
                                        <div class="form-group my-0">
                                            <input class="form-control form-control-sm border-0" 
                                                name="search" 
                                                placeholder="Search username..."
                                                value="{{ username is defined ? username : "" }}">
                                        </div>
                                        <div class="form-group my-0">
                                            <button class="btn btn-link btn-sm text-white" type="submit">
                                                <i class="fal fa-search fa-fw"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <table class="table table-borderless table-striped">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Votes</th>
                                    <th>Ip Address</th>
                                </tr>
                            </thead>
                            {% for voter in voters['items'] %}
                            <tr>
                                <td>{{ voter['username'] }}</td>
                                <td>{{ voter['total'] }}</td>
                                <td>{{ voter['ip_address'] }}</td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan=3>No results.</td>
                            </tr>
                            {% endfor %}
                        </table>
                    </div> 

                    {% if voters is defined %}

                    <div class="m-auto text-center">
                        {% set search = (username is defined ? "?search="~username~"" : "") %}
                        {% set base = "admin/voters/" %}
                        
                        <a href="{{ url("admin/voters/"~voters['first']~search) }}" class="btn btn-link text-white px-1">
                            <i class="fal fa-angle-double-left fa-fw"></i>
                        </a>
                        <a href="{{ url("admin/voters/"~voters['before']~search) }}" class="btn btn-link text-white px-1">
                            <i class="fal fa-angle-left fa-fw"></i>
                        </a>
                        
                        Page {{ voters['current'] }} of {{ voters['total_pages'] }}
    
                        <a href="{{ url("admin/voters/"~voters['next']~search) }}" class="btn btn-link text-white  px-1 ml-2">
                            <i class="fal fa-angle-right fa-fw"></i>
                        </a>
                        <a href="{{ url("admin/voters/"~voters['last']~search) }}" class="btn btn-link px-1 text-white">
                            <i class="fal fa-angle-double-right fa-fw"></i>
                        </a>
                    </div>
                    {% endif %}

                    {{ content|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}