{%  extends 'admin_layout.twig' %}

{% block content %}
    {% embed "admin/templates/sidebar.twig" %}{% endembed %}
    <div class="main-content" id="panel">
        {% embed "admin/templates/header_nav.twig" %}{% endembed %}

        <div class="container-fluid pt-6">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="text-uppercase text-muted ls-1 mb-1">Dashboard</h6>
                                    <h2 class="mb-0">Votes</h2>
                                </div>
                                <div class="col">
                                    <form method="get" action="{{ url('admin/votes/1') }}" 
                                        class="form-inline float-right">
                                        <div class="form-group my-0">
                                            <input class="form-control form-control-sm border-0" 
                                                name="search" 
                                                placeholder="Search username..."
                                                value="{{ search is defined ? search : "" }}">
                                        </div>
                                        <div class="form-group my-0">
                                            <button class="btn btn-link btn-sm text-white" type="submit">
                                                <i class="fal fa-search fa-fw"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <table class="table table-borderless table-striped">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Ip Address</th>
                                    <th>Site Id</th>
                                    <th>Started</th>
                                    <th>Is Complete</th>
                                    <th>Claimed</th>
                                </tr>
                            </thead>
                            {% for vote in votes['items'] %}
                            <tr>
                                <td>{{ vote['username'] }}</td>
                                <td>{{ vote['ip_address'] }}</td>
                                <td>{{ vote['site_id'] }}</td>
                                <td>{{ vote['started_on']|date("m.d.y g:i A") }}</td>
                                <td>
                                    {% if vote['voted_on'] == -1 %}
                                    <span class="text-danger">No</span>
                                    {% else %}
                                    <span class="text-success">Yes</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if vote['claimed'] == 0 %}
                                    <span class="text-danger">No</span>
                                    {% else %}
                                    <span class="text-success">Yes</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="3">No results.</td>
                            </tr>
                            {% endfor %}

                        </table>
                    </div>

                    {% if votes is defined %}

                    <div class="m-auto text-center">
                        {% set search = (search is defined ? "?search="~search~"" : "") %}
                        
                        <a href="{{ url("admin/votes/"~votes['first']~search) }}" class="btn btn-link text-white px-1">
                            <i class="fal fa-angle-double-left fa-fw"></i>
                        </a>
                        <a href="{{ url("admin/votes/"~votes['before']~search) }}" class="btn btn-link text-white px-1">
                            <i class="fal fa-angle-left fa-fw"></i>
                        </a>
                        
                        Page {{ votes['current'] }} of {{ votes['total_pages'] }}
    
                        <a href="{{ url("admin/votes/"~votes['next']~search) }}" class="btn btn-link text-white  px-1 ml-2">
                            <i class="fal fa-angle-right fa-fw"></i>
                        </a>
                        <a href="{{ url("admin/votes/"~votes['last']~search) }}" class="btn btn-link px-1 text-white">
                            <i class="fal fa-angle-double-right fa-fw"></i>
                        </a>
                    </div>
                    {% endif %}

                    {{ content|raw }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}