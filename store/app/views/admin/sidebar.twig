{% block admin_sidebar %}
<nav class="navbar navbar-main navbar-vertical fixed-left navbar-expand-md navbar-dark shadow-sm" id="sidenav-main">
    <div class="container-fluid">
        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" 
            data-target="#sidenav-collapse-main" aria-controls="sidenav-main" 
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Brand -->
        <a class="navbar-brand pt-0" href="{{ url('admin') }}">
            {{ constant('site_title') }}
        </a>

        <!-- User -->
        <ul class="nav align-items-center d-md-none">
            <li class="nav-item dropdown">
                <i class="fas fa-user-circle"></i> {{ member.getName() }}
            </li>
        </ul>
        
        <!-- Collapse -->
        <div class="collapse navbar-collapse" id="sidenav-collapse-main">

            <!-- Collapse header -->
            <div class="navbar-collapse-header d-md-none">
                <div class="row">
                    <div class="col-6 collapse-brand">
                        <a href="{{ url('admin') }}">
                            Dashboard
                        </a>
                    </div>
                    <div class="col-6 collapse-close">
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class=" nav-link {{ controller == "admin" and action == 'index' ? "active" : "" }}"
                       href="{{ url('admin') }}">
                        <i class="fal fa-chart-bar text-primary fa-fw"></i>
                        Dashboard
                    </a>
                </li>

                {% set active = 
                    controller == "payments" or
                    controller == "categories" or
                    controller == "products" or
                    controller == "discounts" %}

                <li class="nav-item">
                    <a class="nav-link {{ active ? 'show' : 'collapsed' }}" href="#store-nav" 
                            data-toggle="collapse" role="button" 
                            aria-expanded="{{ active ? 'true' : 'false' }}" 
                            aria-controls="store-nav">
                        <i class="fal fa-shopping-bag fa-fw text-primary"></i>
                        <span class="nav-link-text">Store</span>
                    </a>

                    <div class="collapse {{ active ? 'show' : '' }}" id="store-nav" style="">
                        <ul class="nav nav-sm flex-column">
                            <li class="nav-item">
                                <a href="{{ url('admin/payments') }}" 
                                        class="nav-link {{ controller == "payments" ? "active" : "" }}">
                                    Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ url('admin/products') }}" 
                                        class="nav-link {{ controller == "products" ? "active" : "" }}">
                                    Products
                                </a>
                            </li>
                            <li class="nav-item {{ controller == "" }}">
                                <a href="{{ url('admin/categories') }}" 
                                        class="nav-link {{ controller == "categories" ? "active" : "" }}">
                                    Catgories
                                </a>
                            </li>
                            <li class="nav-item {{ controller == "" }}">
                                <a href="{{ url('admin/discounts') }}" 
                                        class="nav-link {{ controller == "discounts" ? "active" : "" }}">
                                    Discounts
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class=" nav-link {{ controller == "sessions" and action == 'index' ? "active" : "" }}"
                       href="{{ url('admin/sessions') }}">
                        <i class="fal fa-lock text-primary fa-fw"></i>
                        Session History
                    </a>
                </li>
            </ul>

            <hr class="my-3">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class=" nav-link" href="{{ url('') }}">
                        <i class="fal fa-home text-primary fa-fw"></i>
                        Home
                    </a>
                </li>
                
                <li class="nav-item active">
                    <a class="nav-link text-danger" href="{{ url('admin?signout') }}">
                        <i class="fal fa-sign-out text-danger fa-fw"></i>
                        Sign Out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% endblock %}