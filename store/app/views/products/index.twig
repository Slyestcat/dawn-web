{%  extends 'admin_layout.twig' %}

{% block content %}
{% include "admin/sidebar.twig" %}

<div class="main-content" id="panel">
    {% include "admin/header.twig" %}

    <div class="container-fluid pt-6">
        <div class="row">
            <div class="col-xl-12">
                {{ content|raw }}
                <div class="card border-0 shadow-sm">

                    <div class="card-header bg-transparent">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-muted ls-1 mb-1">Store</h6>
                                <h2 class="mb-0">Products</h2>
                            </div>
                            <div class="col text-right">
                                <a href="{{ url('admin/products/add') }}" 
                                        class="btn btn-primary shadow-none">
                                    <i class="fal fa-plus fa-fw"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>Name</th>
                            <th>Max Qty</th>
                            <th>Cat.</th>
                            <th>Price</th>
                            <th class="text-center">
                                Options
                            </th>
                        </tr>
                        </thead>
                        {% for product in products %}
                            <tr>
                                <td>{{ product['id'] }}</td>
                                <td>
                                    {{ product['item_name'] }}
                                    <span class="text-muted">
                                        ({{ product['item_id'] }})
                                    </span>
                                </td>
                                <td>
                                    {{ product['max_qty'] }}
                                </td>
                                <td>{{ product['category_title'] }}</td>
                                <td>${{ product['price']|number_format(2) }}</td>
                                <td class="text-center">
                                    <a href="{{ url('admin/products/edit/'~product['id']) }}" 
                                        class="btn btn-primary btn-sm">
                                        <i class="fal fa-pencil fa-fw"></i>
                                    </a>
                                    <a href="{{ url('admin/products/delete/'~product['id']) }}" 
                                        class="btn btn-danger btn-sm">
                                        <i class="fal fa-trash-alt fa-fw"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}