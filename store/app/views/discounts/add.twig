{%  extends 'admin_layout.twig' %}

{% block content %}
    {% embed "admin/sidebar.twig" %}{% endembed %}
    <div class="main-content" id="panel">
        {% embed "admin/header.twig" %}{% endembed %}

        <div class="container-fluid pt-6">
            <div class="row">
                <div class="col-xl-12">

                    {{ content|raw }}

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="text-uppercase text-muted ls-1 mb-1">Store</h6>
                                    <h2 class="mb-0">Add Discount</h2>
                                </div>
                                <div class="col text-right">
                                    <a href="{{ url('admin/discounts/add') }}" 
                                            class="btn btn-primary shadow-none">
                                            <i class="fal fa-plus fa-fw"></i>
                                    </a>
                                </div>
                            </div>
                        </div>


                        <div class="card-body">
                            <form action="{{ url('admin/discounts/add') }}" method="post">
                                <div class="form-group">
                                    <label for="code" class="text-uppercase text-muted mb-1 small">
                                        Code
                                    </label>
                                    <input type="text" class="form-control" name="code" id="code">
                                </div>
                                <div class="form-group">
                                    <label for="code" class="text-uppercase text-muted mb-1 small">
                                        Percentage
                                    </label>
                                    <input type="number" min="1" max="100" step="1"
                                         class="form-control" name="percentage" id="percentage">
                                </div>
                                <div class="form-group">
                                    <label for="expires" class="text-uppercase text-muted mb-1 small">
                                        Expires
                                    </label>
                                    <input type="number" class="form-control" name="expires" id="expires">
                                    <small class="text-muted">
                                        Number of seconds until expired. 86400 = 1 day
                                    </small>
                                </div>

                                <input type="hidden" name="_token" value="{{ csrf_token }}">

                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-success">Save Changes</button>
                                    <a href="{{ url('admin/discounts') }}">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}