{%  extends 'admin_layout.twig' %}

{% block content %}
{% include "admin/sidebar.twig" %}
<div class="main-content" id="panel">
    {% include "admin/header.twig" %}

    <div class="container-fluid pt-6">
        <div class="row">
            <div class="col-xl-12">
                {%  if error is defined %}
                    <div class="alert alert-danger">
                        {{ error }}
                    </div>
                {% endif %}

                {{ content|raw }}

                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="text-uppercase text-muted ls-1 mb-1">Store</h6>
                                <h2 class="mb-0">Delete Category: {{ category['title'] }}</h2>
                            </div>
                            <div class="col text-right">
                                <a href="{{ url('admin/categories/add') }}" 
                                        class="btn btn-primary shadow-none">
                                        <i class="fal fa-plus fa-fw"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <h2 class="text-danger mb-0">Are you sure?</h2>

                        <p>Deleting this category will permanently remove it from the database and can not be
                            recovered. Only click "Delete" if you are sure you want to remove this product.</p>

                        <form method="post" action="{{ url('admin/categories/delete/'~category.id) }}">
                            <input type="hidden" value="{{ csrf_token }}" name="_token">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                            <a href="{{ url('admin/categories') }}" 
                                class="btn btn-link text-white-50">
                                Abort Mission
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}